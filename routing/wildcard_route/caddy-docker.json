{
        "kind": "Pod",
        "apiVersion":"v1",

        "metadata": {
                "name": "caddy-docker",
                "labels": {
                        "name": "caddy-docker"
                }
        },
        "spec": {
                "containers": [{
                        "name": "caddy-docker-pod",
                        "image": "aosqe/caddy-docker-wildcard",
                        "ports": [
                                {
                                        "containerPort": 8080
                                },
                                {
                                        "containerPort": 8443
                                }
                        ]
                }]
        }
}
