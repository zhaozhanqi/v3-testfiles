{
  "kind": "BuildConfig",
  "apiVersion": "v1",
  "metadata": {
    "name": "ruby-ex",
    "labels": {
      "app": "ruby-ex"
    }
  },
  "spec": {
    "triggers": [
      {
        "type": "ConfigChange"
      }
    ],
    "runPolicy": "Parallel",
    "source": {
      "type": "Git",
      "git": {
        "uri": "https://github.com/sclorg/ruby-ex.git"
      },
      "secrets": []
    },
    "strategy": {
      "type": "Source",
      "sourceStrategy": {
        "from": {
          "kind": "ImageStreamTag",
          "namespace": "openshift",
          "name": "ruby:latest"
        }
      }
    }
  }
}
